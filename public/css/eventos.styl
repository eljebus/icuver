@import 'style.styl'


#container
	background none
	overflow hidden
#content
	flex-direction: row
	flex-wrap wrap
	background none
	justify-content: center
	padding-top 3em
	min-height 600px
	figure
		margin 0
		width 40%
		height 412px
		margin-right 5%
		margin-bottom 3em
		-webkit-box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.75);
		-moz-box-shadow:    0px 3px 5px 0px rgba(50, 50, 50, 0.75);
		box-shadow:         0px 3px 5px 0px rgba(50, 50, 50, 0.75);
		&:nth-child(2n)
			margin-right 0
		img 
			width 100%