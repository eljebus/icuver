@import '../style.styl'

#container header
	border-bottom 1px
nav
	background #e1c035
	padding 1em		
#content
	position relative
	min-height 500px
	nav
		position fixed
		margin-top 1em
		width 150px
		background rgb(120, 110, 41)
		color white
		-webkit-box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 0.75);
		-moz-box-shadow:    0px 0px 5px 0px rgba(50, 50, 50, 0.75);
		box-shadow:         0px 0px 5px 0px rgba(50, 50, 50, 0.75);
		ul 
			list-style none
			margin 0
			padding 0
			li
				border-bottom solid 1px
				padding 0.5em
				transition all 0.5s
				&:hover
					cursor pointer
					padding-left 1em
			ul
				padding-left 1em
				font-size 0.9em
				li
					border-bottom 0
	#mainContainer
		width 800px
		margin auto
		margin-top 1em
		min-height 100px
		h3
			text-align center
.font-right
	text-align right