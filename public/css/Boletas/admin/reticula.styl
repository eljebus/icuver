@import 'layout.styl'
	
#content #mainContainer
	width 80% !important
#izquierda,#derecha
	width 47%
	display inline-block
	vertical-align top
#izquierda
	margin-right 5%
	
form
	display block
	width 100%
	
	label
		width 100px
		display inline-block
		vertical-align top
	input,textarea,select
		width 270px
		padding 0.5em
		margin-bottom 1em
		font-family: 'Droid Serif',serif;
		display inline-block
		
	input[type='number']
		width 50px
	input[type='date']
		width 150px
	textarea
		height 150px 
		
	button
		box-shadow: 0 1px 4px rgba(0,0,0,0.3),0 0 40px rgba(0,0,0,0.1) inset;
		background: #eeb92a;
		color: #fff;
		text-shadow: 0 0 1px rgba(0,0,0,0.2);
		border none
		padding 0.5em
		width 200px
		font-family: 'Droid Serif',serif;
		font-size 18px
		
		
		