@import 'style.styl'


#container
	background none
	overflow hidden
#content
	flex-direction: row
	flex-wrap wrap
	background none
	justify-content: center
	h3
		background #806b3c
		text-align center
		color white
		padding 1em
		margin 0
		width 100%
		height 56px
	#contentSlider
		margin-top 4em
		padding-top 4em
		padding-bottom 4em
		background: #c4c4c4; /* Old browsers */
		background: -moz-linear-gradient(top,  #c4c4c4 0%, #ffffff 40%, #ffffff 60%, #ffffff 60%, #c4c4c4 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#c4c4c4), color-stop(40%,#ffffff), color-stop(60%,#ffffff), color-stop(60%,#ffffff), color-stop(100%,#c4c4c4)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top,  #c4c4c4 0%,#ffffff 40%,#ffffff 60%,#ffffff 60%,#c4c4c4 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top,  #c4c4c4 0%,#ffffff 40%,#ffffff 60%,#ffffff 60%,#c4c4c4 100%); /* Opera 11.10+ */
		background: -ms-linear-gradient(top,  #c4c4c4 0%,#ffffff 40%,#ffffff 60%,#ffffff 60%,#c4c4c4 100%); /* IE10+ */
		background: linear-gradient(to bottom,  #c4c4c4 0%,#ffffff 40%,#ffffff 60%,#ffffff 60%,#c4c4c4 100%);
