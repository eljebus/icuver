@import 'style.styl'


#container
	background none
	overflow hidden
#content
	min-height 600px
	flex-direction: row
	flex-wrap wrap
	background none
	
	section 
		width 45%
		margin-top 4em
		color white
		height 350px
		-webkit-box-shadow: 0px 4px 14px 0px rgba(0, 0, 0, 0.69);
		-moz-box-shadow:    0px 4px 14px 0px rgba(0, 0, 0, 0.69);
		box-shadow:         0px 4px 14px 0px rgba(0, 0, 0, 0.69);
	#data
		margin-right 10%
		padding 1em
		background #b79c6a
	#slider
		width 100%
		box-shadow none
		margin-bottom 2em
		overflow hidden
		display block
	#izquierda
		width: 0;
		height: 0;
		border-top: 50px solid #b79c6a;
		border-right: 150px solid transparent;
		align-self: flex-start;  
		transition all ease 0.5s
		