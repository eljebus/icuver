@import 'icon.css'
@import 'skitter.styles.css'

body
	margin 0
	padding: 0
	font-family: 'Droid Serif', serif;
	
a
	color inherit
	text-decoration none
	
	
*, *:before, *:after{ 
    box-sizing: border-box; 
    -moz-box-sizing: border-box; 
    -webkit-box-sizing: border-box; 
} 

#container 
	display flex
	flex-direction: column
	width 1000px
	margin auto
	overflow hidden
	padding-top 2em
	header
		margin-bottom 4em
		aside
			font-size 18px
			margin-right 1em
	
	#content
		background #806b3c
		padding 5em
		-webkit-box-shadow: 0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		-moz-box-shadow:    0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		box-shadow:         0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		text-align center
		color white
		transition all ease 0.5s
		p
			width 542px
			margin auto

	#derecha
		width: 0;
		height: 0;
		border-bottom: 50px solid #806b3c;
		border-left: 190px solid transparent;
		align-self: flex-end;
		transition all ease 0.5s
	#izquierda
		width: 0;
		height: 0;
		border-top: 50px solid #806b3c;
		border-right: 190px solid transparent;
		align-self: flex-start;  
		transition all ease 0.5s
			
.inline
	display inline-block
	
footer
	margin-top 8em
	nav
		ul
			margin 0
			padding 0
			list-style none
			display flex
			height 142px
			li 
				width 20%
				text-align center
				background url('/image/footer.png')
				background-size 506% 100%
				background-repeat no-repeat
				height 150px
				padding-top 5em
				color white
				overflow hidden
				transition all ease 0.5s
				&:hover
					margin-top -90px 
					height 240px
					background-size 506% 100%
					padding-top 7em
					cursor pointer
			#que
				background-position-x -2px
			#valores
				background-position-x -202px
			#chef
				background-position-x -405px
			#mision
				background-position-x -606px
			#vision
				background-position-x -807px
	