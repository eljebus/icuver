@import 'layout.styl'

#content #mainContainer ul
	justify-content: flex-start
form
	section
		ul
			list-style none
			margin-left 0
			padding-left 0
			display flex
			justify-content flex-start
			align-items: flex-start
			flex-wrap: wrap
			width 100%
			li 
				width 24.5% !important
				height 150px
				margin-right 5px !important
				vertical-align: top;
				align-self flex-start
				&:nth-child(4n)
					margin-right 0 !important
				
			#new
				position relative
				background #E2C134
				input
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					z-index 50
					opacity 0
				div
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					z-index 2
					padding 1em
					color white
					text-align center
					width 100%
					padding-top 2em
					aside
						font-size 3em
	button
		width 150px
		background: #eeb92a;
		border none
		padding 1em
		float left
		-webkit-box-shadow: 0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		-moz-box-shadow:    0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		box-shadow:         0px 4px 5px 0px rgba(0, 0, 0, 0.45);
		
					
			
			
	
		